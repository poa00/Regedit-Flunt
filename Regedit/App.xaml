                                        <ToolkitControls:DropShadowPanel CornerRadius="2" Height="24" x:Name="Glow" IsMasked="True" Color="{ThemeResource SystemAccentColorLight3}" ShadowOpacity="0.93" Grid.Row="1" Grid.Column="0">
                                            <Rectangle
