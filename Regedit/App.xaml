                                                        </ObjectAnimationUsingKeyFrames>
                                                        <DoubleAnimation Storyboard.TargetName="Pill" Storyboard.TargetProperty="Opacity" EnableDependentAnimation="True" Duration="0:0:0.00" To="1">
